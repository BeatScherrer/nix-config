{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,
  "share": "manual",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git branch *": "allow",
      "git show *": "allow",
      "grep *": "allow",
      "just --list *": "allow",
      "just --list": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "which *": "allow",
      "echo *": "allow"
    },
    "webfetch": "ask"
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "anthropic/claude-opus-4-6"
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-opus-4-6",
      "permission": {
        "edit": "deny",
        "bash": {
          "*": "ask",
          "git status *": "allow",
          "git diff *": "allow",
          "git log *": "allow",
          "grep *": "allow",
          "just --list *": "allow",
          "just --list": "allow"
        }
      }
    }
  }
}
